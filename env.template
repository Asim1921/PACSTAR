# =============================================================================
# PACSTAR Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment
# Usage: cp env.template .env && nano .env

# =============================================================================
# MongoDB Configuration
# =============================================================================
MONGO_ROOT_USER=pacstar_admin
MONGO_ROOT_PASSWORD=your_secure_mongodb_password_here
MONGODB_DB=pacstar_db

# MongoDB Express (Admin UI) - Optional, for development only
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=your_mongo_express_password

# =============================================================================
# JWT Configuration
# =============================================================================
# Generate secure keys: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=your-super-secret-jwt-key-minimum-32-characters-change-this
JWT_REFRESH_SECRET_KEY=your-super-secret-refresh-key-minimum-32-characters-change-this
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# =============================================================================
# Master Admin Bootstrap
# =============================================================================
# These credentials are used to create the initial Master Admin account
MASTER_ADMIN_USERNAME=master
MASTER_ADMIN_EMAIL=master@yourdomain.com
MASTER_ADMIN_PASSWORD=YourSecureMasterPassword123!

# =============================================================================
# Security Configuration
# =============================================================================
# Generate secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SESSION_SECRET_KEY=your-session-secret-key-change-this

# Allowed hosts (JSON array format)
# For development: ["*"]
# For production: ["yourdomain.com", "api.yourdomain.com"]
ALLOWED_HOSTS=["*"]

# CORS allowed origins (JSON array format)
# For development: ["*"]
# For production: ["https://yourdomain.com", "https://api.yourdomain.com"]
ALLOW_ORIGINS=["*"]

# =============================================================================
# Environment
# =============================================================================
# Options: dev, prod
# dev: Enables Swagger UI documentation
# prod: Disables Swagger UI for security
ENV=dev

# =============================================================================
# Rate Limiting & Security
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
MAX_FAILED_LOGINS=5
LOCKOUT_TIME_MINUTES=15

# =============================================================================
# Frontend Configuration
# =============================================================================
# Public API URL (accessible from browser)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Backend URL (internal Docker network)
BACKEND_URL=http://backend:8000

# =============================================================================
# OpenStack Configuration (Optional)
# =============================================================================
# Set OPENSTACK_ENABLED=true to enable OpenStack integration
OPENSTACK_ENABLED=false
OPENSTACK_AUTH_URL=http://your-openstack:5000/v3
OPENSTACK_USERNAME=
OPENSTACK_PASSWORD=
OPENSTACK_PROJECT_ID=
OPENSTACK_PROJECT_NAME=
OPENSTACK_USER_DOMAIN_NAME=Default
OPENSTACK_PROJECT_DOMAIN_ID=default
OPENSTACK_REGION_NAME=
OPENSTACK_INTERFACE=public
OPENSTACK_VERIFY_SSL=true
OPENSTACK_DEFAULT_FLAVOR_ID=
OPENSTACK_DEFAULT_NETWORK_ID=

# =============================================================================
# SSL/TLS Configuration (Optional)
# =============================================================================
# For HTTPS in production, configure these:
# SSL_CERT_FILE=/path/to/cert.pem
# SSL_KEY_FILE=/path/to/key.pem

# =============================================================================
# Server Configuration
# =============================================================================
SERVER_IP=192.168.1.100
SERVER_PORT=8000

